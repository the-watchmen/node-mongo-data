{
  "name": "@watchmen/mongo-data",
  "version": "3.1.0",
  "description": "mongo crud stuff",
  "main": "dist/index.js",
  "repository": "the-watchmen/node-mongo-data",
  "license": "ISC",
  "scripts": {
    "ava": "cross-env DEBUG=test:*,lib:*,dbg:* NODE_ENV=auto ava -s",
    "pretest": "xo",
    "test": "yarn ava test/ava",
    "prebuild": "yarn test",
    "build": "babel src -d dist"
  },
  "dependencies": {
    "@watchmen/debug": "1.1.1",
    "@watchmen/helpr": "2.3.8",
    "@watchmen/mongo-helpr": "1.3.3",
    "config": "3.2.2",
    "joi": "14.3.1",
    "lodash": "4.17.19",
    "mongodb": "3.2.6"
  },
  "devDependencies": {
    "@babel/cli": "7.5.5",
    "@babel/core": "7.5.5",
    "@babel/polyfill": "7.4.4",
    "@babel/preset-env": "7.5.5",
    "@babel/register": "7.5.5",
    "@watchmen/mongo-test-helpr": "1.0.0",
    "@watchmen/test-helpr": "0.3.4",
    "ava": "1.4.1",
    "cross-env": "5.2.0",
    "iso-639-1": "2.0.5",
    "xo": "0.24.0"
  },
  "xo": {
    "prettier": true,
    "rules": {
      "eslint-comments/disable-enable-pair": 0,
      "capitalized-comments": 0,
      "prefer-rest-params": 0,
      "no-unused-expressions": [
        2,
        {
          "allowShortCircuit": true,
          "allowTernary": true
        }
      ]
    }
  },
  "ava": {
    "require": [
      "@babel/register",
      "@babel/polyfill"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
